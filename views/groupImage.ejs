<main class="contenedor contenedor-formularios no-pading">
    <h1>
        <%= titlePage %>
    </h1>

    <form class="default-form" method="POST" enctype="multipart/form-data">

        <div class="campo">
            <label>Imagen</label>
            <input type="file" name="image" />
        </div>

        <% if(group.image) { %>
            <div class="campo">
                <label>Imagen actual</label>
                <img src="/uploads/groups/<%=group.image %>" width="200" />
            </div>
        <% } else { %>
            <p>No hay imagen actual
        <% } %>
        <div class="campo enviar">
            <input type="submit" value="Subir imagen" class="btn btn-rosa" />
        </div>
    </form>
</main>